<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hee.storerush.StoreInfo">

    <TextView

        android:id="@+id/enter_name"
        android:textColor="@color/black"
        android:text="Store Name"
        android:textSize="20dp"
        android:layout_height="22dp"
        android:layout_width="match_parent"

        ></TextView>

    <EditText
        android:gravity="top|left"
        android:layout_below="@+id/enter_name"
        android:id="@+id/store_name"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="Enter store name here."
        ></EditText>

    <TextView
        android:layout_below="@+id/store_name"
        android:id="@+id/address"
        android:textColor="@color/black"
        android:text="Address"
        android:textSize="20dp"
        android:layout_height="22dp"
        android:layout_width="match_parent"

        ></TextView>

    <EditText
        android:gravity="top|left"
        android:layout_below="@+id/address"
        android:id="@+id/address_input"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Enter store address here."
        ></EditText>

    <TextView
        android:layout_below="@+id/address_input"
        android:id="@+id/open"
        android:textColor="@color/black"
        android:text="Opening Hour"
        android:textSize="20dp"
        android:layout_height="22dp"
        android:layout_width="match_parent"
        android:layout_margin="3dp"

        ></TextView>

    <EditText
        android:layout_below="@+id/open"
        android:id="@+id/open_input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="e.g) 07:00"
        ></EditText>

    <TextView
        android:layout_below="@+id/open_input"
        android:id="@+id/close"
        android:textColor="@color/black"
        android:text="Closing Hour"
        android:textSize="20dp"
        android:layout_height="22dp"
        android:layout_width="match_parent"
        android:layout_margin="3dp"

        ></TextView>

    <EditText
        android:layout_below="@+id/close"
        android:id="@+id/close_input"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="e.g) 21:00"
        android:layout_marginBottom="10dp"
        ></EditText>

    <Button
        android:id="@+id/update"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background ="@drawable/custom_button"
        android:layout_below="@+id/close_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Save Changes"
        android:layout_margin="50px"
        />


</RelativeLayout>
